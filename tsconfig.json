{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "declaration": true,
    "declarationDir": "dist",
    "jsx": "react",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": false,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "shogun-core": ["./node_modules/shogun-core", "./src/types/shogun-sdk.d.ts"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
